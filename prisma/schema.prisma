generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model News {
  id            Int      @id @default(autoincrement())
  identificator String   @unique
  title         String
  content       String   @db.Text
  preview       String?
  tagId         Int?
  tag           Tag?     @relation(fields: [tagId], references: [id])
  createdAt     DateTime @default(now())
}

model Tag {
  id   Int    @id @default(autoincrement())
  name String @unique
  news News[]
}
